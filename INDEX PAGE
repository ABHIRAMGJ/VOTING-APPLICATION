<script>
    // Typed.js animation
    var typed = new Typed('#typed-text', {
        strings: ["Secure & Easy Online Voting", "Blockchain-Powered Elections", "Vote Anytime, Anywhere"],
        typeSpeed: 150,
        backSpeed: 50,
        loop: true
    });

    // Particles.js background
    particlesJS.load('particles-js', 'https://cdn.jsdelivr.net/gh/VincentGarreau/particles.js/demo/particles.json');

    // AOS animations
    AOS.init({
        duration: 3000,
        once: true
    });
</script>

